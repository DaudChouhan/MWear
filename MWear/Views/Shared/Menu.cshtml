@{
    List<MWear.Models.Category> categories = TempData["cat"] as List<MWear.Models.Category>;
}
<!-- EC Main Menu Start -->
<div id="ec-main-menu-desk" class="d-none d-lg-block sticky-nav">
    <div class="container position-relative">
        <div class="row">
            <div class="col-md-12 align-self-center">
                <div class="ec-main-menu">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        @if (TempData["cat"] != null)
                        {
                            foreach (var item in categories.Where(x => x.ParentCategory == null).OrderBy(x => x.CategoryID))
                            {
                                <li class="dropdown">
                                    <a href="@Url.Action("Index","Shop",new { CatId=item.CategoryID})">@item.CategoryName</a>
                                    <ul class="sub-menu">
                                        @foreach (var items in categories.Where(x => x.ParentCategory == item.CategoryID).OrderBy(x => x.CategoryName))
                                        {
                                            <li class="dropdown position-static">
                                                <a href="@Url.Action("Index","Shop",new { CatId=items.CategoryID})">
                                                    @items.CategoryName
                                                    <i class="ecicon eci-angle-right"></i>
                                                </a>
                                                @if (categories.Where(x => x.ParentCategory == items.CategoryID).Count() > 0)
                                                {
                                                    <ul class="sub-menu sub-menu-child">
                                                        @foreach (var itemss in categories.Where(x => x.ParentCategory == items.CategoryID).OrderBy(x => x.CategoryName))
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Index","Shop",new { CatId=itemss.CategoryID})">@itemss.CategoryName</a>
                                                                @if (categories.Where(x => x.ParentCategory == itemss.CategoryID).Count() > 0)
                                                                {
                                                                    <ul class="sub-menu sub-menu-child">
                                                                        @foreach (var itemsss in categories.Where(x => x.ParentCategory == itemss.CategoryID).OrderBy(x => x.CategoryName))
                                                                        {
                                                                            <li>
                                                                                <a href="@Url.Action("Index","Shop",new { CatId=itemsss.CategoryID})">@itemsss.CategoryName</a>
                                                                            </li>
                                                                        }

                                                                    </ul>
                                                                }
                                                            </li>
                                                        }

                                                    </ul>
                                                }

                                            </li>
                                        }

                                    </ul>
                                </li>
                            }
                        }

                        <li><a href="@Url.Action("Index","Shop")">Shop</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Ec Main Menu End -->
