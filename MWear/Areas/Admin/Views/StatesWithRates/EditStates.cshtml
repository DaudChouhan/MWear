@model MWear.Models.State
@{
    ViewBag.Title = "EditStates";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- CONTENT WRAPPER -->
<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>Add Category</h1>
                <p class="breadcrumbs">
                    <span><a href="@Url.Action("Index","Admin")">Home</a></span>
                    <span><i class="mdi mdi-chevron-right"></i></span>States
                </p>
            </div>
            <div>
                <a href="@Url.Action("Index","StatesWithRates")" class="btn btn-primary">
                    View All
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>Add Category</h2>
                    </div>

                    <div class="card-body">
                        <div class="row ec-vendor-uploads">
                            <div class="col-lg-12 col-sm-12">
                                <div class="ec-vendor-upload-detail">
                                    @*<form  class="row g-3">*@
                                    @using (Html.BeginForm("EditStates", "StatesWithRates", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">State name</label>
                                            <input type="hidden" value="@Model.Id" name="Id" />
                                            <input type="text" class="form-control slug-title" value="@Model.StateName" name="StateName" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Delivey Charges</label>
                                            <input type="text" class="form-control slug-title" value="@Model.Charges" name="Charges" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Amount On Which Delivery Becomes Free</label>
                                            <input type="hidden" value="@Model.Id" name="Id" />
                                            <input type="text" class="form-control slug-title" value="@Model.MaxOrderAmount" name="MaxOrderAmount" required>
                                        </div>


                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    }
                                    @*</form>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Content -->
</div> <!-- End Content Wrapper -->
