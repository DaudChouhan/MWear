@model MWear.Models.City
@{
    ViewBag.Title = "AddCities";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    List<MWear.Models.State> states = ViewBag.States;
}


<!-- CONTENT WRAPPER -->
<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>Add Category</h1>
                <p class="breadcrumbs">
                    <span><a href="@Url.Action("Index","Admin")">Home</a></span>
                    <span><i class="mdi mdi-chevron-right"></i></span>Category
                </p>
            </div>
            <div>
                <a href="@Url.Action("Index","CitiesWithRates")" class="btn btn-primary">
                    View All
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>Add Category</h2>
                    </div>

                    <div class="card-body">
                        <div class="row ec-vendor-uploads">
                            <div class="col-lg-12 col-sm-12">
                                <div class="ec-vendor-upload-detail">
                                    @*<form  class="row g-3">*@
                                    @using (Html.BeginForm("AddCities", "CitiesWithRates", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">City name</label>
                                            <input type="text" class="form-control slug-title" name="CityName" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="form-label">Select Province</label>
                                            <select id="Categories" name="StateId" class="form-select">
                                                <option>Select Parent Category</option>
                                                @foreach (var item in states)
                                                {
                                                    <option value="@item.Id">@item.StateName</option>
                                                }

                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Delivery Charges</label>
                                            <input type="text" class="form-control slug-title" name="Charges" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Amount On Which Delivery Becomes Free</label>
                                            <input type="text" class="form-control slug-title" name="MaxOrderAmount" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-8 mb-25">
                                            <label class="form-label">Fixed Charges</label>
                                            <div class="form-checkbox-box">
                                                <div class="form-check form-check-inline">
                                                    <input type="checkbox" name="AvailableChechbox">
                                                    <label>Yes</label>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    }
                                    @*</form>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Content -->
</div> <!-- End Content Wrapper -->
