@model MWear.Models.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    List<MWear.Models.Category> pcategories = ViewBag.PCat;
}

<!-- CONTENT WRAPPER -->
<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>Add Category</h1>
                <p class="breadcrumbs">
                    <span><a href="@Url.Action("Index","Category")">Home</a></span>
                    <span><i class="mdi mdi-chevron-right"></i></span>Category
                </p>
            </div>
            <div>
                <a href="@Url.Action("Index","Category")" class="btn btn-primary">
                    View All
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>Add Category</h2>
                    </div>

                    <div class="card-body">
                        <div class="row ec-vendor-uploads">
                            <div class="col-lg-12 col-sm-12">
                                <div class="ec-vendor-upload-detail">
                                    @*<form  class="row g-3">*@
                                    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Category name</label>
                                            <input type="text" class="form-control slug-title" name="CategoryName" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="form-label">Select Parent Category (If Any)</label>
                                            <select id="Categories" name="ParentCategory" class="form-select">
                                                <option>Select Parent Category</option>
                                                @foreach (var item in pcategories)
                                                {
                                                    <option value="@item.CategoryID">@item.CategoryName</option>
                                                }

                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <label class="form-label">Ful Detail</label>
                                            <textarea class="form-control" name="CategoryDescription" rows="4"></textarea>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    }
                                    @*</form>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Content -->
</div> <!-- End Content Wrapper -->
