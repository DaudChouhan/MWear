@model MWear.Models.WebImage
@{
    ViewBag.Title = "EditWebImages";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- CONTENT WRAPPER -->
<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>Edit Web Images</h1>
                <p class="breadcrumbs">
                    <span><a href="@Url.Action("Index","Admin")">Home</a></span>
                    <span><i class="mdi mdi-chevron-right"></i></span>Web Images
                </p>
            </div>
            <div>
                <a href="@Url.Action("Index","WebImages")" class="btn btn-primary">
                    View All
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>Add Category</h2>
                    </div>

                    <div class="card-body">
                        <div class="row ec-vendor-uploads">
                            <div class="col-lg-12 col-sm-12">
                                <div class="ec-vendor-upload-detail">


                                    @using (Html.BeginForm("EditWebImages", "WebImages", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="col-md-12">

                                            <input type="hidden" value="@Model.ImageID" name="ImageID" />
                                            <label for="inputEmail4" class="form-label">Image name</label>
                                            <input type="text" class="form-control slug-title" value="@Model.ImageName" name="ImageName" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Image</label>
                                            <input type="text" class="form-control slug-title" value="@Model.ImagePath" name="ImagePath" id="inputEmail4" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Image Alt Text</label>
                                            <input type="text" class="form-control slug-title" value="@Model.ImageAltText" name="ImageAltText" required>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputEmail4" class="form-label">Position</label>
                                            <input type="text" class="form-control slug-title" value="@Model.Position" name="Position" required>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Content -->
</div> <!-- End Content Wrapper -->
